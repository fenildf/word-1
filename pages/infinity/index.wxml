<div class="container-fluid">
    <div class="layer" style="background-size:cover;"></div>
    <!--<image src="/resource/image/infinity/main.png" mode="scaleToFill" style="width: {{width}}px; height: {{height}}px;" class="bbb"></image>-->
    <image src="/resource/image/infinity/cloud.png" style="width:{{cloud1_width}}px; height:{{cloud1_height}}px;" class="cloud1"></image>
    <image src="/resource/image/infinity/cloud.png" style="width:{{cloud2_width}}px; height:{{cloud2_height}}px;" class="cloud2"></image>
    <div class="row" style="margin-top:120px;">
        <div class="col-24">
            <p class="name animated fadeInDown">巅峰挑战</p>
        </div>
    </div>

    <block wx:if="{{show_button == 1}}">
        <form report-submit="true" bindsubmit="begin">
            <div class="row animated slideInLeft" style="margin-top:120px;">
                <div class="col-12 col-offset-6">
                    <button class="btn-begin" formType="submit">开始挑战</button>
                </div>
            </div>
            <div class="row animated slideInRight" style="margin-top:20px;">
                <div class="col-12 col-offset-6">
                    <p class="btn-rank" bindtap="leaderboard">我的排名</p>
                </div> 
            </div>
        </form>
    </block>
</div> 