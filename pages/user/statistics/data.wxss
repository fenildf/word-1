.layer {
    background-image: linear-gradient(to bottom, #eff0f5 0%, #eff0f5 100%);
}

.box {
    background-color: white;
    border-radius: 20px;
}

.box image {
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}

.box .nickname {
    font-size: 1.75rem;
    font-weight: bold;
    text-align: center;
    margin-top: 20px;
    margin-bottom: 30px;
}

.box .man {
    color: #1396ff;
}

.box .girl {
    color: #ef7a82;
}

.box .board {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
    text-align: center;
    padding-bottom: 80px;
}

.box .board .iconfont {
    font-size: 20px;
}

.box .board .number {
    font-weight: bold;
    font-size: 1.25rem;
}

.box .board .explain {
    font-size: small;
    white-space: nowrap;
}

.share-group {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.share-group .circle {
    border-radius: 50%;
    width: 60px;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: -30px;
    margin-left: auto;
    margin-right: auto;
}

.share-group .share-friend {
    background-color: #6665ff;
}

.share-group .share-friend p {
    font-size: 1.25rem;
    font-weight: bold;
    color: white;
}

.share-group .share-friendcircle {
    background-color: #09bb07;
}

.share-group .share-friendcircle p {
    font-size: 1.5rem;
    color: white;
}

.item {
    display: flex;
    align-items: center;
    margin-top: 10px;
    background-color: white;
    height: 80px;
    padding-right: 10px;
}

.item .number {
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    height: 80px;
    width: 80px;
}

.index {
    font-size: 2rem;
}

.content {
    flex-grow: 1;
    margin-left: 20px;
}

.content .name {
    font-weight: bold;
}

.content .progress {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 5px;
}

.content .progress .info {
    font-size: small;
    padding-bottom: 5px;
}
