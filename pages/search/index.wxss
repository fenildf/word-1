/* pages/search/test.wxss */

.layer {    
    background-image: linear-gradient(to bottom, #ffffff 0%, #eff0f5 100%);
}

.content {
    color: white;
}

.dialogue {
    clear: both;
    display: flex;
    align-items: flex-start;
    max-width: 80%;
    margin-bottom: 20px;
}

.right {
    float: right;
}

.right p {
    background-color: #6665ff;
    padding: 10px;
    border-radius: 20px;
    margin-bottom: 10px;
    margin-right: 10px;
}

.avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    flex-shrink: 0;
}

.answer {
    margin-bottom: 10px;
    margin-left: 10px;
    background-color: #eff1f5;    
    color: #1f314a;
    padding: 10px;
    border-radius: 20px;
    flex-shrink: 1;
}

.answer .word {
    font-weight: bold;
    padding: 5px 10px;
}

.answer .sound {
    display: flex;
    align-items: center;
}

.answer .phonetic {
    padding-bottom: 5px;
    padding: 5px 10px;
}

.answer p.explain {
    border-top: 1px solid rgba(136,136,136,.3);
    padding: 10px;    
    color: #33445b;    
}

.searchbox {
    position: fixed;
    bottom: 20px;
    left: 20px;
    right: 20px;
    z-index: 2;
}

.inputbox {
    height: 56px;    
    background-color: #fff;
    width: 100%;
    padding-left: 20px;
    border-top-left-radius: 40px;
    border-bottom-left-radius: 40px;
    border: 1px solid #6665ff;
}

.search {
    color: white;
    background-color: #6665ff;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top-right-radius: 40px;
    border-bottom-right-radius: 40px;
}

.share-searchbox {
    display: flex;
    justify-content: space-around;
    align-items: center;
    position: fixed;
    bottom: 20px;
    left: 10px;
    right: 10px;
    z-index: 2;
}

.header
{
    display: flex;
    align-items: center;
}

.share
{
    background-color:transparent;
    padding:0;
    border:0;
    color:white;
    margin-left: 5px;
}

.share .iconfont {
    color: #33445b;
    font-weight:bold;
}

.search .iconfont {
    color: white;
}