/* pages/recite/words.wxss */

.layer {    
    background-image: linear-gradient(to bottom, #ffffff 0%, #eff0f5 100%);
}

#lexicon-name {
    text-align: center;    
    font-weight:bold;    
    color: white;
}

.box
{
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 36px;
    background-color:white;
    padding-top:10px;
    padding-bottom:10px;
    margin-left: 15px;
    margin-right: 15px;
    color: #ef7a82;
}

.btn-switch {
    background-color: #67bb97;    
    padding:5px 15px;
    color:white;
    text-align:center;
}

.cell {
    background-color: white;    
    padding: 10px;
    margin: 10px 15px; 
}

.cn {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;    
    font-size: small;
}

.begin {
    background-color: #6665ff;
}

.finish {
    background-color: #ef7a82;
}